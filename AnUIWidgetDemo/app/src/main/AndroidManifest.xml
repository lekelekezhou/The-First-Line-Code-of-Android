<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.endergeek.rookie.anuiwidgetdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--显式Activity简单注册name即可-->
        <activity
            android:name=".LinearLayoutActivity"
            android:label="@string/app_linear_activity">

        </activity>
        <activity
            android:name=".RelativeLayoutActivity"
            android:label="@string/app_relative_activity">

        </activity>
        <activity
            android:name=".FrameLayoutActivity"
            android:label="@string/app_frame_activity">

        </activity>
        <activity
            android:name=".TableLayoutActivity"
            android:label="@string/app_table_activity">

        </activity>
    </application>

</manifest>